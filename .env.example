# Application Settings
APP_NAME=Oscar Legal Practitioners
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=oscar_legal
# DATABASE_URL is optional, constructed from above in app
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/oscar_legal

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=your-openai-api-key-here
# Alternative: Use Anthropic Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration (Future Implementation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@oscarlegal.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000, *

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Vector Database Configuration
VECTOR_DB_PATH=./ai-service/data/vector_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Frontend URL (for email links, etc.)
FRONTEND_URL=http://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_EXPIRE_HOURS=24

# Development Settings
RELOAD=True